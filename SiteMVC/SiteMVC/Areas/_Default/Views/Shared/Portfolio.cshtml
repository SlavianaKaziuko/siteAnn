@using SiteMVC.Areas._Default.Models
@{
    ViewBag.Title = "Portfolio";
    Layout = ViewBag.Layout;
}

<link rel="stylesheet" href="//frontend.reklamor.com/fancybox/jquery.fancybox.css" media="screen">
<script src="//frontend.reklamor.com/fancybox/jquery.fancybox.js"></script>

<div class="row">
    @foreach (AlbumItem album in ViewBag.Album)
    {
        
        <div class="col-md-3 col-sm-4 col-xs-6 slider">
            <a class="thumbnail albumItem" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#container" href="/_Default/Portfolio/Album?path=@album.Path" id="updated-container">
                <img class="img-responsive" src="@album.MainPhotoPath" />
                @album.Name
            </a>
        </div>
    }

</div>

